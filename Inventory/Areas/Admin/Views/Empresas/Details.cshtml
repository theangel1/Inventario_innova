@model Inventory.Models.Empresa

@{
    ViewData["Title"] = "Details";
}
<div class="container-fluid">
    <h3>Detalle Empresa</h3>
    <hr class="bg-warning" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rut)
        </dd>
    </dl>

    <div class="form-group text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark col-lg-2 col-md-5 col-sm-3">Editar Empresa</a>
        <a asp-action="Index" class="btn btn-warning col-lg-2 col-md-5 col-sm-3">Volver a la Lista</a>
    </div>
</div>
