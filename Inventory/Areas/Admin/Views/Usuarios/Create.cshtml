@model Inventory.Models.ViewModel.AppUserViewModel
@using Inventory.Extensions

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container-fluid">

    <h3 class="text-dark">@ViewData["Title"]</h3>
    <hr class="bg-warning" />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.User.Nombre"></label>
            <input asp-for="@Model.User.Nombre" class="form-control" required />
            <span asp-validation-for="@Model.User.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Email"></label>
            <input asp-for="@Model.User.Email" class="form-control" required type="email" />
            <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Pass"></label>
            <input autocomplete="off" type="password" asp-for="@Model.Pass" class="form-control" required />
            <span asp-validation-for="@Model.Pass" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ConfPass"></label>
            <input autocomplete="off" type="password" asp-for="@Model.ConfPass" class="form-control" required />
            <span asp-validation-for="@Model.ConfPass" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.RolId">Rol Usuario</label>
            <select asp-for="@Model.RolId" asp-items="Model.RolList.ToSelectListItem(Model.RolList.First().ToString())" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.EmpresaId">Empresa Asociada</label>
            <select asp-for="@Model.User.EmpresaId" asp-items="Model.EmpresaList.ToSelectListItemEmp(Model.EmpresaList.First().ToString())" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.PhoneNumber">Numero de Telefóno</label>
            <input asp-for="@Model.User.PhoneNumber" type="number" class="form-control" />
        </div>
        <br />
        <div class="form-group text-center">
            <button type="submit" class="btn btn-dark col-sm-12 col-md-5 col-lg-2">Registrar</button>
            <a class="btn btn-warning col-sm-12 col-md-5 col-lg-2" asp-action="Index">Volver</a>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @if (!string.IsNullOrEmpty(ViewBag.serverError))
    {
    <script type="text/javascript">
          Swal.fire("¡Información!", '@ViewBag.serverError', "error");
    </script>
    }

}
