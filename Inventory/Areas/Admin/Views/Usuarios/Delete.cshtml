@model Inventory.Models.ViewModel.AppUserViewModel
@using Inventory.Extensions
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container-fluid">
    <h3 class="text-danger">Eliminar Usuario del Sistema</h3>
    <hr class="bg-warning"/>

    <div class="row">
        <div class="col">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.User.Nombre"></label>
                    <input readonly asp-for="@Model.User.Nombre" class="form-control" />
                    <span asp-validation-for="@Model.User.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.User.Email"></label>
                    <input readonly asp-for="@Model.User.Email" class="form-control" />
                    <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Rol"></label>
                    <input disabled asp-for="@Model.Rol" class="form-control" />
                    <span asp-validation-for="@Model.Rol" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" asp-route-id="@Model.User.Id" class="btn btn-danger col-sm-12 col-md-5 col-lg-2">Eliminar </button>
                    <a class="btn btn-dark col-sm-12 col-md-5 col-lg-2" asp-action="Index">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}