@model Inventory.Models.ViewModel.AppUserViewModel
@using Inventory.Extensions
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container-fluid">
    <h3 class="text-dark">@ViewData["Title"]</h3>
    <hr class="bg-warning" />


    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.User.Nombre"></label>
            <input asp-for="@Model.User.Nombre" class="form-control" />
            <span asp-validation-for="@Model.User.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.Email"></label>
            <input readonly asp-for="@Model.User.Email" class="form-control" />
            <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Rol"></label>
            <select asp-for="@Model.RolId" asp-items="Model.RolList.ToSelectListItem(Model.RolId)" class="form-control"></select>
            <span asp-validation-for="@Model.Rol" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.User.EmpresaId"></label>
            <select asp-for="@Model.User.EmpresaId" asp-items="Model.EmpresaList.ToSelectListItemEmp(Model.EmpresaList.First().ToString())" class="form-control"></select>
        </div>
        <div class="form-group text-center">
            <button type="submit" asp-route-id="@Model.User.Id" class="btn btn-dark col-sm-12 col-md-5 col-lg-2">Guardar cambios</button>
            <a class="btn btn-warning col-sm-12 col-md-5 col-lg-2" asp-action="Index">Volver</a>
        </div>
    </form>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

