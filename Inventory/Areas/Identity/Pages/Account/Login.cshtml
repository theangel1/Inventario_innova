@page
@model LoginModel

@{
    Layout = "/Views/Shared/_LayoutProduccion.cshtml";
}
<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 fondoCustom" >
    <div class="pv-40 dark-translucent-bg">
        <div class="row justify-content-center">
            <div class="form-block center-block p-30 light-gray-bg border-clear trans">
                <section>
                    <form id="account" method="post">
                        <div class="row">
                            <div class="col-8 col-sm-8 col-md-8 col-lg-8 col-xl-8">
                                <h3 class="text-white">Accede al Sistema</h3>
                            </div>
                            <div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4 text-right">
                                <a href="https://www.innovamobel.cl" target="_blank">
                                    <img class="img-login" src="~/img/logo innova.png" alt="Alternate Text" style="width:100%;" />
                                </a>
                            </div>
                        </div>
                        <hr class="bg-warning" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label class="text-white" asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="text-white" asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-dark"><span class="oi oi-key"></span> Ingresar</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @if (TempData["mensaje"] != null)
    {
        <script>
            Swal.fire("Innova", '@TempData["mensaje"]', "success");
        </script>
    }
}
