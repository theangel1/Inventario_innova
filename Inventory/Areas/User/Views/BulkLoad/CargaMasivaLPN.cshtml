@{
    ViewData["Title"] = "Tramo 4: Carga Masiva con LPN";
}
<div class="container-fluid">
    <h3>@ViewData["Title"]</h3>
    <hr class="bg-warning" />
   
    <hr />    
        <p class="text-primary">Si desea cargar de forma masiva el excel con el LPN y número de cita, hagalo mediante el siguiente menú.</p>
    

    <a class="btn btn-dark" href="~/resources/lpn/lpnOT.xlsx" download>
        Descargar excel de ejemplo con LPN.
    </a>

    <hr />

    <form method="post" enctype="multipart/form-data" class="form-text">

        <div class="form-group">
            <input type="file" class="form-control-file" name="files" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-dark" value="Cargar" />
            <a asp-action="Index" class="btn btn-warning">Volver</a>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @if (!string.IsNullOrEmpty(@Context.Request.Query["mensaje"]))
    {
        <script>
            Swal.fire("Información", '@Context.Request.Query["mensaje"]', 'info');
        </script>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <script type="text/javascript">
          Swal.fire("¡Información!", '@ViewBag.Message', "info");
        </script>
    }

    @if (!string.IsNullOrEmpty(ViewBag.serverError))
    {
        <script type="text/javascript">
          Swal.fire("¡Información!", '@ViewBag.serverError', "error");
        </script>
    }

}