
@{
    ViewData["Title"] = "Carga de Compra";
}

<div class="container">

    <h3 class="text-primary">@ViewData["Title"]</h3>

    <p>En esta sección podrá cargar el xml de compra.</p>

    <form method="post" enctype="multipart/form-data" class="form-text">

        <div class="form-group">
            <input type="file" name="files" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-outline-primary" value="Cargar" />
            <a asp-action="Index" class="btn btn-outline-dark">Volver</a>
        </div>
    </form>


</div>



@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <script type="text/javascript">
          Swal.fire("¡Información!", '@ViewBag.Message', "info");
        </script>
    }

    @if (!string.IsNullOrEmpty(Context.Request.Query["mensaje"]))
    {
        <script type="text/javascript">

               Swal.fire({
                    title: "Información",
                    html: '@Context.Request.Query["mensaje"]',
                    type: "success"
               }).then(function() {
                   window.location = "IndexFolios";
                });
            
        </script>
    }


}