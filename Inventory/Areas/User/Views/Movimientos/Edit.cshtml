@model Inventory.Models.Movimiento

@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid">
    <h3>Editar Movimiento</h3>
    <hr class="bg-warning" />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="TipoOperacion" class="control-label"></label>
                    <select asp-for="TipoOperacion" class="form-control"></select>
                    <span asp-validation-for="TipoOperacion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-warning">Volver a la Lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
